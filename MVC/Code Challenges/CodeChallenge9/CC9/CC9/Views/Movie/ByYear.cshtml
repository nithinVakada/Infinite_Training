
@model IEnumerable<CC9.Models.Movie>

@{
    ViewBag.Title = "Movies By Year";
}

<h2>Search Movies By Year</h2>

@using (Html.BeginForm("GetYearForm", "Movie", FormMethod.Get))
{
    <label for="year">Enter Year:</label>
    <input type="number" id="year" name="year" value="@(ViewBag.Year ?? "")" />
    <input type="submit" value="Search" />
}

@if (Model != null && Model.Any())
{
    <h3>Movies Released in @ViewBag.Year</h3>
    <table border="1" cellpadding="5" cellspacing="0">
        <thead>
            <tr>
                <th>Movie ID</th>
                <th>Movie Name</th>
                <th>Director Name</th>
                <th>Date of Release</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Mid</td>
                    <td>@movie.Moviename</td>
                    <td>@movie.DirectorName</td>
                    <td>@movie.DateofRelease.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (ViewBag.Year != null)
{
    <p>No movies found for the year @ViewBag.Year.</p>
}






