<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="Nav.master.cs" Inherits="Electricity_Prj.Nav" %>

<!DOCTYPE html>

<html>
<head runat="server">
    <title>Electricity Board</title>
   <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        header, footer {
            text-align: center;
            padding: 10px;
        }

        .nav {
            text-align: center;
            margin: 20px 0;
        }

        .nav a {
            display: inline-block;
            margin: 0 10px;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <form runat="server">
        <header>
        <h2>Electricity Board Bills</h2>
    </header>
    <div class="nav">
        <asp:HyperLink ID ="login" runat="server" NavigateUrl="~/Login.aspx" Text="Login"></asp:HyperLink>
        <asp:HyperLink ID="adefault" runat="server" NavigateUrl="~/Default.aspx" Text="Default"></asp:HyperLink>
        <asp:HyperLink ID="add" runat="server" NavigateUrl="~/AddBills.aspx" Text="Add Bills"></asp:HyperLink>
        <asp:HyperLink ID="view" runat="server" NavigateUrl="~/ViewBills.aspx" Text="View Bills"></asp:HyperLink>
        <asp:LinkButton ID ="btnLogout" runat="server" OnClick="btnLogout_Click">Logout</asp:LinkButton>
    </div>
    <section>
        <article>
            <asp:ContentPlaceHolder ID="PrimaryContent" runat="server"></asp:ContentPlaceHolder>
        </article>
    </section>
    </form>
    <footer>
        &copy; Electricity Board 
    </footer>
</body>
</html>
